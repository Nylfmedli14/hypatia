<%- include("./_header.ejs") %>
  <body>
  	<h1>Edit Religion</h1>

  	<a href="../"><button>Back to Home</button></a>

  	<form id="editReligionForm" data-religion-id="<%= religion.id %>">
	  	<div>
	  		<label for="name">Name</label>
	  		<input class="edit" id="name" value="<%= religion.name %>"></input>
		</div>
		<br>
	  	<div>
	  		<label for="historicalRoots">Historical Roots</label>
	  		<textarea class="edit" id="historicalRoots"><%= religion.historicalRoots %></textarea>
		</div>
		
	  	<div>
	  		<label for="basicBeliefs">Basic Beliefs</label>
	  		<input class="edit" id="basicBeliefs" value="<%= religion.basicBeliefs %>"></input>
		</div>
	
	  	<div>
	  		<label for="practices">Practices</label>
	  		<input class="edit" id="practices" value="<%= religion.practices %>"></input>
		</div>
		
	  	<div>
	  		<label for="organization">Organization</label>
	  		<input class="edit" id="organization" value="<%= religion.organization %>"></input>
		</div>
		
	  	<div>
	  		<label for="books">Books</label>
	  		<input class="edit" id="books" value="<%= religion.books[0] %>"></input>
		</div>
		<br>
		<button type="submit">Submit</button>
  	</form>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
	<script src="/editReligion.js"></script>
  </body>
</html>
